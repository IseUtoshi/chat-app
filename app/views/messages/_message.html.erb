<div class="main-chat__message">
  <div class="main-chat__message-upper">
    <div class="main-chat__message__name">
      <%= message.user.name %>
    </div>
    <div class="main-chat__message__date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="main-chat__message-lower">
    <div class="main-chat__message__chat">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>